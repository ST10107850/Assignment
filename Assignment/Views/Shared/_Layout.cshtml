<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Surveys</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Assignment.styles.css" asp-append-version="true" />
    <link href="\css\stylesheet.css" rel="stylesheet" />
    <style>
        .navbar-brand {
            position: relative; /* Remove absolute positioning */
        }

        .navbar-nav {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
        }

        .nav-item.active .nav-link {
            color: blue !important;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Surveys</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 ml-auto">
                    <!-- Added ml-auto class here -->
                    <li class="nav-item fill-survey @(ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Fill Out Survey</a>
                    </li>
                    <li class="nav-item survey-result @(ViewContext.RouteData.Values["action"].ToString() == "Survey_Result" ? "active" : "")">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Survey_Result">View Survey Result</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Survey - Nhlakanipho Samuel Nsundwane
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            // Add click event handler to navbar items
            $(".navbar-nav .nav-link").click(function () {
                $(".navbar-nav .nav-item").removeClass("active");
                $(this).parent().addClass("active");
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
